{
  "manifest_version": 3,
  "name": "Palette Painter",
  "description": "Type a theme, fetch a palette from your API, and repaint the current page.",
  "version": "1.0.0",
  "action": {
    "default_title": "Palette Painter",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "114"
}
